const mongoose = require('mongoose');



const UserSchema = new mongoose.Schema({
  email: {
    type: String,
    required: true,
  },
  password: {
    type: String,
    required: true
  },
  name: {
    type: String,
    required: true

  },
  dateOfBirth: {
    type:String,
  },
  pensionAccountNumber: {
    type: String,
  },
  contactInformation: {
    type: String,
  },
  lifeCertificate: {
    type: String,
  },
  aadharNumber: {
    type: String,
  },
  photo: {
    type: String,
  },
  signature: {
    type: String,
  },
  state: {
    type: String,
  },
  district: {
    type: String,
  },
  isFamilyPensioner: {
    type: Boolean,
  },
});

const User = mongoose.model('User', UserSchema);
module.exports = User;
